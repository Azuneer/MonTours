{
  "name": "montours",
  "version": "1.0.0",
  "description": "Monorepo pour cartographier les entreprises IT de Tours",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:backend": "cd apps/backend && bun run dev",
    "dev:frontend": "cd apps/frontend && bun run dev",
    "build": "bun run --filter '*' build",
    "start": "bun run --filter '*' start",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": ["elysia", "bun", "react", "leaflet", "tailwind", "api", "tours", "companies", "map"],
  "author": "",
  "license": "ISC"
}
